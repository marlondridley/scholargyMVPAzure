{
  "name": "scholargy-mvp-azure",
  "version": "1.0.0",
  "description": "Scholargy MVP - Full Stack Application for Azure App Service Environment",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint . --ext .js",
    "build": "npm run build:frontend && npm run copy-frontend",
    "build:azure": "npm run build:frontend && npm run copy-frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "copy-frontend": "shx cp -r frontend/build/* public/",
    "postinstall": "npm run build:frontend && npm run copy-frontend",
    "dev:frontend": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build:ubuntu": "npm run build:frontend && npm run copy-frontend"
  },
  "dependencies": {
    "@azure/arm-rediscache": "^8.0.0",
    "@azure/identity": "^4.0.0",
    "@azure/openai": "^2.0.0",
    "@azure/search-documents": "^12.0.0",
    "@azure/storage-blob": "^12.17.0",
    "@react-oauth/google": "^0.12.1",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.39.0",
    "@tailwindcss/typography": "^0.5.10",
    "axios": "^1.7.2",
    "chart.js": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "express-urlrewrite": "^1.2.0",
    "google-auth-library": "^10.2.1",
    "lucide-react": "^0.541.0",
    "mongodb": "^6.3.0",
    "openai": "^4.20.1",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "redis": "^5.8.0",
    "studentvue": "^2.0.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "shx": "^0.4.0",
    "supertest": "^7.1.3",
    "tailwindcss": "^3.3.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "routes/**/*.js",
      "services/**/*.js",
      "middleware/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
